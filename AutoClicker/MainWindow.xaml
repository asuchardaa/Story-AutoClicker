<Window x:Class="AutoClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClicker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Title="Storytelling Auto Clicker" Height="320" Width="440">
    
    <Grid>
        <GroupBox Header="Click interval" HorizontalAlignment="Left" VerticalAlignment="Top" Width="420" Height="70" Margin="10,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtHours" Grid.Column="0" Width="40" Height="20" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Text="0"/>
                <Label Grid.Column="1" Content="hours" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtMinutes" Grid.Column="2" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Text="0"/>
                <Label Grid.Column="3" Content="mins" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtSeconds" Grid.Column="4" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Text="0"/>
                <Label Grid.Column="5" Content="secs" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox x:Name="txtMilliseconds" Grid.Column="6" Width="40" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" Text="100"/>
                <Label Grid.Column="7" Content="milliseconds" Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Cursor position" HorizontalAlignment="Left" VerticalAlignment="Top" Width="420" Height="70" Margin="10,90,0,0">
            <Grid>
                <RadioButton Content="Current location" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,10,0,0" IsChecked="True"/>
                <RadioButton Content="Pick location" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,10,0,0"/>
                <TextBox Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,10,70,0" Text="X"/>
                <TextBox Width="40" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,10,20,0" Text="Y"/>
            </Grid>
        </GroupBox>

        <Button Content="Start Left (F5)" x:Name="btnStartLeft" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="10,180,0,0"/>
        <Button Content="Stop Left (F5)" x:Name="btnStopLeft" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="230,180,0,0"/>
        <Button Content="Start Right (F6)" x:Name="btnStartRight" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="10,240,0,0"/>
        <Button Content="Stop Right (F6)" x:Name="btnStopRight" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="40" Margin="230,240,0,0"/>
    </Grid>
</Window>
